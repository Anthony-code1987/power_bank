<div class="container">
  <div class= "container-infos">
    <div class="powerbank-infos">
      <% if @powerbank.photo.attached? %>
        <%= cl_image_tag @powerbank.photo.key, height: 300, width: 400, crop: :fill, class:"card-img-top" %>
      <% else %>
        <img src="https://source.unsplash.com/random/?shop" class="card-img-top" alt="image">
      <% end %>
      <div class="avis-infos">
        <h2><%= @powerbank.title %></h2>
        <p>Adresse: <%= @powerbank.adress %></p>
        <p>Description: <%= @powerbank.description %></p>
        <p>Price: <%= @powerbank.price %>â‚¬ / heure</p>
      </div>
    </div>

<div class="button-show">
      <% if current_user == @powerbank.user %>
      <div class= "link-show">
        <%= link_to "Edit", edit_powerbank_path(@powerbank.id), class:"btn-green"%>

        <%= link_to "Delete", powerbank_path(Powerbank.find(params[:id])), data: {turbo_method: :delete, turbo_confirm: "Are you sure ?"}, class:"btn-green" %>
      </div>
      <% else %>
        <div data-controller="toggle" class="mt-3">
          <button data-action="click->toggle#fire" data-toggle-target="triggerElement" class="btn-green bottom-left">Reserve</button>
            <div data-toggle-target="togglableElement" class="d-none">
              <%= render "reservations/form_reservation", reservation: @reservation %>
            </div>
        </div>
      <% end %>
    </div>


  </div>

</div>
